<%= form_name ||= "Manage" %>
<h1 class="text-center"> <%= form_name %> city </h1>

  <% if @city.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@city.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @city.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class="container">
  <%= form_for @city do |c| %>
    <div class="form-group">
      <%= c.label :name %>
      <%= c.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= c.label :country_name %>
      <%= c.text_field :country_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= c.label :time_zone %>
      <%= c.text_field :time_zone, class: "form-control" %>
    </div>

    <%= c.submit "#{form_name} City", class:"btn btn-primary" %>

  <% end %>
</div>
