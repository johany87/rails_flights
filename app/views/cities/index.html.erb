
<div class="container">
  <h1 class="text-center">Cities</h1>
  <section class="row text-center">
    <div class="col-md-offset-4">
      <a href="<%= new_city_path %>" class="btn btn-default">New City</a>
    </div>
  </section>
    <% @cities.each do |c| %>
      <article class="row">
        <ul>
          <li class="col-md-3"> <strong> <%= c.name %> </strong>  </li>
          <li class="col-md-3"> <%= c.country_name  %> </li>
          <li class="col-md-3"> <%= c.time_zone %>  </li>
          <li class="col-md-3"> <a href="<%= city_path(c.id) %>" data-method="delete" class="btn btn-danger"> Delete </a> </li>
        </ul>
      </article>
    <% end if @cities.any?  %>
</div>
